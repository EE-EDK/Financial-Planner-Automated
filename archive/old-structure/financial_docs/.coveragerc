[run]
source = scripts
omit =
    tests/*
    */__pycache__/*
    */site-packages/*
branch = True

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if sys.platform == 'win32':
show_missing = True
precision = 2

[html]
directory = tests/coverage_html
